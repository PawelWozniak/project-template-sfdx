// Every argument in args must be separate. Space is not allowed.
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Undo git commit",
            "detail": "Undo last git commit made in local repository. Use when you forgot to add some elements.",
            "group": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "git",
            "args": [
                "reset",
                "--soft",
                "HEAD~1"
            ]
        },
        {
            "label": "Deploy verify on target",
            "detail": "Use SFDX to deploy changes",
            "group": "build",
            "type": "shell",
            "command": "sfdx",
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "args": [
                "source:deploy",
                "--checkonly",
                "--verbose",
                "--sourcepath",
                "force-app",
                "-u",
                "${input:TargetOrgs}"
            ]
        },
        {
            "label": "Reauthorize sandbox",
            "detail": "Use when you got an error that current authorization is not valid. Bug in SFDX - you need to restart computer so sfdx can reload auth info.",
            "group": "build",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "auth:web:login",
                "--instanceurl",
                "https://test.salesforce.com",
                "--setalias",
                "${input:SandboxName}"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Download Metadata",
            "detail": "Use SFDX to retrive metadata with given name.",
            "group": "build",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "source:retrieve",
                "-m",
                "${input:MetadataType}:${input:MetadataName}"
            ]
        },
        {
            "label": "Activate debug logs",
            "detail": "Activate debug logs streaming in console",
            "group": "build",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "apex:log:tail",
                "--color"
            ]
        },
        // Salesforce code scanner. More details: https://forcedotcom.github.io/sfdx-scanner/
        // Install plugin first: sfdx plugins:install @salesforce/sfdx-scanner
        {
            "label": "Check code with SFDX Scanner",
            "detail": "Scan code for issues with SFDX Scaner",
            "group": "build",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "scanner:run",
                "--target",
                "./",
                "--projectdir",
                "./",
                "--engine",
                "sfge",
                "--format",
                "csv"
            ]
        },
    ],
    "inputs": [
        {
            "id": "SandboxName",
            "description": "Enter Sandbox Name",
            "type": "promptString"
        },
        {
            "id": "MetadataName",
            "description": "Enter Apex Class name",
            "type": "promptString"
        },
        {
            "id": "MetadataType",
            "description": "Choose Metadata type to download",
            "type": "pickString",
            "options": [
                "ApexClass",
                "ApexTrigger"
            ]
        },
        {
            "id": "TargetOrgs",
            "description": "Target orgs for deployment",
            "type": "pickString",
            "options": [
                "uat",
                "PROD"
            ]
        },
    ]
}